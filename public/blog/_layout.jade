extends ../_layout.jade

block content
  .masthead
  .inner(itemscope, itemtype="http://schema.org/Blog")
    if current.source === 'index'
      != yield
    else
      article(itemprop="blogPosts", itemscope, itemtype="http://schema.org/BlogPosting")
        h1.entry-title= title
        != partial('../_shared/entry-meta')
        != yield
        != partial('../_shared/blog-navigation', public.blog)
        #disqus_thread.entry-comments
        noscript
          | Please enable JavaScript to view the
          a(href='http://disqus.com/?ref_noscript') comments powered by Disqus.
          a.dsq-brlink(href='http://disqus.com')
            | comments powered by
            span.logo-disqus Disqus

block scripts
  if current.source !== 'index'
    script(src='#{ libs.highlight }')
    script.
      hljs.initHighlightingOnLoad();
    script.
      var disqus_shortname = 'olemichelsen';
      var disqus_identifier = '#{ url + 'blog/' + current.source + '.html' }';
      var disqus_url = '#{ url + 'blog/' + current.source + '.html' }';
      (function() {
      var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
      dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
      (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
      })();
