-   var folders = _.pickBy(root, (value, key) => key.indexOf('_') === -1);
-   _.map(folders, (value, key) => _.merge(value, {key}));
-   var sorted = _.orderBy(folders, '_data.index.date', 'desc');
-   return sorted;
- };

