link(rel="stylesheet", href="#{ libs.flexslidercss }")

ul.slideshow
  each img in public.images.photos.copenhagen._contents
    li
      img(
        src="/images/photos/copenhagen/#{ encodeURIComponent(img) }"
        alt="by Ole Michelsen"
        title="#{ img.replace('.jpg', '') }"
        width="950"
        height="600"
      )

script(src='#{ libs.jquery }')
include ../../bower_components/jquery.animate-enhanced/jquery.animate-enhanced.min.js
include ../../bower_components/jquery-slideshow/jquery.slideshow.min.js
script.
  $(function() {
      $('.slideshow').slideshow({ timeout: 5000, speed: 2000 });
  });
