.masthead
  ul.slideshow
    each image in public.photos._data.index.slideshow
      li
        img(
          src='/images/photos/slideshow/#{ image.url }'
          title='#{ image.title }'
          alt='#{ image.alt }'
        )

section.albums.flickr
  each album in public.photos._data.index.flickr
    a.album(
      href="https://www.flickr.com/photos/olemichelsen/sets/#{ album.id }/"
      data-url="#{ album.thumbnail.url }"
    )
      .title= album.title

section.albums
  a.album.travel-map(href="travel-map.html")
    .title World Travel Map

script.
  window.addEventListener('load', function () {
    var albums = document.querySelectorAll('.flickr.albums .album');
    for (var i = 0; i < albums.length; i++) {
      albums[i].style.backgroundImage = 'url(' + albums[i].getAttribute('data-url') + ')';
    }
    new SlideShow('.slideshow');
  });
